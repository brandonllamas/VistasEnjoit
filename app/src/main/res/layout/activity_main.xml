<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/perfilContainer"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/fondo_curtain_red"
                android:layout_width="150dp"
                android:layout_margin="20dp"
                android:layout_height="70dp"
                android:scaleType="center"
                android:adjustViewBounds="true"
                android:background="@drawable/enjoit_rojo"
                ></ImageView>
        </RelativeLayout>

            <LinearLayout
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"

                android:layout_centerHorizontal="true"
                android:layout_below="@+id/perfilContainer"
               >
                <TextView
                    android:id="@+id/txt_nombre_editperfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:text="PERFIL "
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/negro"
                    />
                <TextView
                    android:id="@+id/txt_nombre_editperfil2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:text="DOMICILIARIO"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/rojo_franjaitemres"
                    />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/titulo"
            android:layout_margin="10dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/perfiluser"
                        />

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:text="King Viruz"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/rojo_franjaitemres"
                        />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/nombrePersona"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="center"
                    android:adjustViewBounds="true"
                    android:background="@drawable/perfiluser"
                    />

                <TextView
                    android:id="@+id/userName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:text="1193505849"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/rojo_franjaitemres"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </LinearLayout>






        </LinearLayout>





    </RelativeLayout>

</RelativeLayout>